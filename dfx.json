{
  "canisters": {
    "backend": {
      "type": "motoko",
      "main": "backend/Backend.mo"
    },
    "frontend": {
      "dependencies": ["backend"],
      "type": "assets",
      "source": ["src/assets", "dist/"],
      "frontend": {
        "entrypoint": "src/index.html"
      }
    }
  },
  "defaults": {
    "build": {
      "packtool": "npm run --silent sources"
    }
  },
  "dfx": "0.15.0",
  "networks": {
    "local": {
      "bind": "127.0.0.1:4943",
      "type": "ephemeral"
    }
  },
  "output_env_file": ".env",
  "version": 2
}
